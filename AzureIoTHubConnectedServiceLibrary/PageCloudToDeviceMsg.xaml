<UserControl x:Class="AzureIoTHubConnectedService.PageCloudToDeviceMsg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AzureIoTHubConnectedService"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="Message Content" Grid.Row="0" />
        <TextBox Grid.Row="1" Margin="5" Text="{Binding Path=CloudToDeviceContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Row="2" Content="Send" Width="Auto" HorizontalAlignment="Right" Padding="10,3,10,3" Margin="5" Command="{Binding Path=ExecuteCmd}" CommandParameter="CloudToDeviceSend" />
        <Label Grid.Row="3" Margin="0" Padding="0" Content="{Binding Path=ErrorMessage, Mode=OneWay}" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Red"/>
    </Grid>
</UserControl>
